    },
    {
      "skill": "society",
      "description": "assess markets"
    },
    {
      "skill": "deception",
      "description": "leverage position"
    }
  ],
  "effects": {
    "criticalSuccess": {
      "msg": "Exclusive deal; +{gold} gold",
      "modifiers": [
        {
          "name": "Exclusive deal",
          "resource": "gold",
          "value": "1d4",
          "duration": "turns",
          "turns": 1
        }
      ],
      "endsEvent": true
    },
    "success": {
      "msg": "Standard agreement; +{gold} gold",
      "modifiers": [
        {
          "name": "Standard agreement",
          "resource": "gold",
          "value": 1,
          "duration": "turns",
          "turns": 1
        }
      ],
      "endsEvent": true
    },
    "failure": {
      "msg": "Poor terms; no significant benefit",
      "modifiers": [],
      "endsEvent": false
    },
    "criticalFailure": {
      "msg": "Trade dispute; -{gold} gold, +{unrest} unrest",
      "modifiers": [
        {
          "name": "Trade dispute",
          "resource": "gold",
          "value": -1,
          "duration": "turns",
          "turns": 1
        },
        {
          "name": "Trade dispute",
          "resource": "unrest",
          "value": 1,
          "duration": "immediate"
        }
      ],
      "endsEvent": false
    }
  },
  "ifUnresolved": {
    "name": "Trade Disruption",
    "description": "The failed trade agreement has disrupted commerce and angered merchants",
    "tier": 1,
    "icon": "fas fa-balance-scale",
    "modifiers": [
      {
        "name": "Trade Disruption",
        "resource": "gold",
        "value": -2,
        "duration": "ongoing"
      },
      {
        "name": "Trade Disruption",
        "resource": "luxuries",
        "value": -1,
        "duration": "ongoing"
      }
    ],
    "resolvedWhen": {
      "type": "skill",
      "skillResolution": {
        "dcAdjustment": 0,
        "onSuccess": {
          "msg": "The trade disruption situation has been resolved!",
          "removeAllModifiers": true
        },
        "onFailure": {
          "msg": "Failed to resolve the trade disruption situation"
        }
      }
    }
  }
}