{
  "id": "notorious-heist",
  "name": "Notorious Heist",
  "description": "A daring theft threatens your kingdom's security and reputation.",
  "tier": 1,
  "traits": [
    "dangerous"
  ],
  "location": "Largest settlement with valuable structures",
  "skills": [
    {
      "skill": "thievery",
      "description": "understand criminal methods"
    },
    {
      "skill": "stealth",
      "description": "track the thieves"
    },
    {
      "skill": "society",
      "description": "investigate connections"
    }
  ],
  "effects": {
    "criticalSuccess": {
      "msg": "Thieves captured with stolen goods; recover losses, convert 2 Unrest to imprisoned unrest",
      "modifiers": [
        {
          "name": "Thieves captured with stolen goods",
          "resource": "imprisoned_unrest",
          "value": 2,
          "duration": "immediate"
        }
      ],
      "endsEvent": true
    },
    "success": {
      "msg": "Thieves arrested; convert 1 Unrest to imprisoned unrest",
      "modifiers": [
        {
          "name": "Thieves arrested",
          "resource": "imprisoned_unrest",
          "value": 1,
          "duration": "immediate"
        }
      ],
      "endsEvent": true
    },
    "failure": {
      "msg": "Thieves escape; -{gold} gold, +{unrest} unrest",
      "modifiers": [
        {
          "name": "Thieves escape",
          "resource": "gold",
          "value": "-1d4",
          "duration": "turns",
          "turns": 1
        },
        {
          "name": "Thieves escape",
          "resource": "unrest",
          "value": 1,
          "duration": "immediate"
        }
      ],
      "endsEvent": false
    },
    "criticalFailure": {
      "msg": "Crime syndicate exposed; -{gold} gold, +{unrest} unrest, may trigger additional crime events",
      "modifiers": [
        {
          "name": "Crime syndicate exposed",
          "resource": "gold",
          "value": "-1d4+1",
          "duration": "turns",
          "turns": 1
        },
        {
          "name": "Crime syndicate exposed",
          "resource": "unrest",
          "value": 2,
          "duration": "immediate"
        }
      ],
      "endsEvent": false
    }
  },
  "ifUnresolved": {
    "name": "Crime Spree",
    "description": "The successful heist has emboldened criminals who continue their crime spree",
    "tier": 1,
    "icon": "fas fa-user-secret",
    "modifiers": [
      {
        "name": "Crime Spree",
        "resource": "gold",
        "value": -2,
        "duration": "ongoing"
      },
      {
        "name": "Crime Spree",
        "resource": "unrest",
        "value": 1,
        "duration": "ongoing"
      }
    ],
    "resolvedWhen": {
      "type": "skill",
      "skillResolution": {
        "dcAdjustment": 0,
        "onSuccess": {
          "msg": "The crime spree situation has been resolved!",
          "removeAllModifiers": true
        },
        "onFailure": {
          "msg": "Failed to resolve the crime spree situation"
        }
      }
    }
  }
}