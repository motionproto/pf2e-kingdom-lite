{
  "id": "demand-structure",
  "name": "Demand Structure",
  "description": "Citizens demand that a specific structure be built.",
  "tier": 1,
  "traits": [
    "dangerous",
    "continuous"
  ],
  "location": "Largest settlement",
  "skills": [
    {
      "skill": "diplomacy",
      "description": "negotiate a compromise"
    },
    {
      "skill": "intimidation",
      "description": "enforce order"
    },
    {
      "skill": "society",
      "description": "understand their needs"
    }
  ],
  "effects": {
    "criticalSuccess": {
      "msg": "Citizens convinced; -{unrest} unrest, **event ends**",
      "modifiers": [
        {
          "name": "Citizens convinced",
          "resource": "unrest",
          "value": -1,
          "duration": "immediate"
        }
      ],
      "endsEvent": true
    },
    "success": {
      "msg": "Demands are satisfied; **event ends**",
      "modifiers": [],
      "endsEvent": true
    },
    "failure": {
      "msg": "Protests continue; +{unrest} unrest, or pay 1 Gold as concessions",
      "modifiers": [
        {
          "name": "Protests continue",
          "resource": "unrest",
          "value": 1,
          "duration": "immediate"
        }
      ],
      "endsEvent": false
    },
    "criticalFailure": {
      "msg": "Violence erupts; +{unrest} unrest, event escalates",
      "modifiers": [
        {
          "name": "Violence erupts",
          "resource": "unrest",
          "value": 2,
          "duration": "immediate"
        }
      ],
      "endsEvent": false
    }
  },
  "ifUnresolved": {
    "name": "Construction Demands",
    "description": "Citizens continue demanding specific structures be built, growing impatient",
    "tier": 1,
    "icon": "fas fa-building",
    "modifiers": [
      {
        "name": "Construction Demands",
        "resource": "unrest",
        "value": 1,
        "duration": "ongoing"
      }
    ],
    "resolvedWhen": {
      "type": "skill",
      "skillResolution": {
        "dcAdjustment": 0,
        "onSuccess": {
          "msg": "The construction demands situation has been resolved!",
          "removeAllModifiers": true
        },
        "onFailure": {
          "msg": "Failed to resolve the construction demands situation"
        }
      }
    }
  }
}