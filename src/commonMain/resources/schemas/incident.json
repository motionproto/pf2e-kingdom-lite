{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "name", "tier", "description"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the incident"
    },
    "name": {
      "type": "string",
      "description": "Display name of the incident"
    },
    "tier": {
      "type": "string",
      "enum": ["DISCONTENT", "TURMOIL", "REBELLION"],
      "description": "Unrest tier when this incident occurs"
    },
    "description": {
      "type": "string",
      "description": "Narrative description of the incident"
    },
    "percentileMin": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "description": "Minimum percentile roll for this incident"
    },
    "percentileMax": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "description": "Maximum percentile roll for this incident"
    },
    "skillOptions": {
      "type": "array",
      "description": "Available skill checks to resolve the incident",
      "items": {
        "type": "object",
        "required": ["skill", "successEffect", "failureEffect"],
        "properties": {
          "skill": {
            "type": "string",
            "description": "Character skill used for the check"
          },
          "successEffect": {
            "type": "string",
            "description": "Effect on success"
          },
          "failureEffect": {
            "type": "string",
            "description": "Effect on failure"
          },
          "criticalSuccessBonus": {
            "type": "string",
            "description": "Additional bonus for critical success"
          },
          "criticalFailureExtra": {
            "type": "string",
            "description": "Additional penalty for critical failure"
          },
          "dc": {
            "type": "integer",
            "description": "Optional fixed DC override"
          }
        }
      }
    }
  }
}
